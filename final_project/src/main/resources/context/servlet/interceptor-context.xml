<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<bean id="signInInterceptor" class="net.koreate.user.interceptor.SignInInterceptor"/>
	
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**"/>
			<mvc:exclude-mapping path="/user/signIn"/>
			<mvc:exclude-mapping path="/user/signUp"/>
			<mvc:exclude-mapping path="/user/signInPost"/>
			<mvc:exclude-mapping path="/user/signUpPost"/>
			<!-- <mvc:exclude-mapping path="/user/signOut"/> -->
			<bean class="net.koreate.user.interceptor.CookieInterceptor" />
		</mvc:interceptor>
		<mvc:interceptor>
			<mvc:mapping path="/user/signInPost"/>
			<ref bean="signInInterceptor"/>
		</mvc:interceptor>
		<mvc:interceptor>
			<mvc:mapping path="/user/signUpPost"/>
			<bean class="net.koreate.user.interceptor.SignUpInterceptor"/>
		</mvc:interceptor>
		
		
	</mvc:interceptors>

</beans>
